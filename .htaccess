RewriteEngine On

# 1. Forzar HTTPS (Opcional, pero recomendado ya que arreglaste el SSL)
# Si alguien entra por http, lo manda a https
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 2. Quitar la extensión .php de la URL (Redirección externa)
# Si alguien escribe "contacto.php", el navegador cambia a "contacto"
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# 3. Mapear la URL limpia al archivo .php (Reescritura interna)
# Si alguien entra a "contacto", el servidor busca "contacto.php" internamente
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]